
@{
    ViewBag.Title = "AddCategory";
}

<h2>Add Category</h2>

<div class="card-block">
    <form class="form-material">
        <div class="form-group form-default">
            <input type="text" name="footer-email" class="form-control">
            <span class="form-bar"></span>
            <label class="float-label">English Name:</label>
        </div>
        <div class="form-group form-default">
            <input type="text" name="footer-email" class="form-control">
            <span class="form-bar"></span>
            <label class="float-label">Arabic Name:</label>
        </div>
        <div class="form-group form-default">
            <input type="text" name="footer-email" class="form-control">
            <span class="form-bar"></span>
            <label class="float-label">Order By:</label>
        </div>
        <div class="form-group form-default">
          @Html.DropDownList("IsActive", new List<SelectListItem>() {
            new SelectListItem {Text="Active",Value="y"},
            new SelectListItem {Text="InActive",Value="n"}
       }, new { @class = "form-control" })
            <span class="form-bar"></span>
            <label class="label">Status:</label>
        </div>
        <div class="form-group form-default">
            <input type="button" name="footer-email" value="Save" class="btn btn-primary" id="Save">
            <span class="form-bar"></span>
        </div>
    </form>
</div>

<script src="~/scripts/jquery-1.10.2.min.js"></script>

<script>
    $('#Save').click(function () {
        var cat = new Object();
        cat.type = $("#type").val();
        cat.name_en = $("#enName").val();
        cat.name_ar = $("#arName").val();
        cat.order_by = $("#OrderBy").val();
        cat.is_active = $("#IsActive").val();
 


        //var formData = new FormData();
        //var files = $("#IconUrl").get(0).files;
        //formData.append("file", files[0]);

        var catdata = JSON.stringify({
            e: cat
            //file: formData
        });

        $.ajax({
            async: true,
            type: "POST",
            dataType: "JSON",
            contentType: 'application/json;',
            url: 'http://localhost:51412/Categorys/SaveCatagory',
            data: catdata,

            processing: true,
            serverSide: true,
            success: function (response) {
                alert("Inserted Successfully");
            }

        })
    })
</script>