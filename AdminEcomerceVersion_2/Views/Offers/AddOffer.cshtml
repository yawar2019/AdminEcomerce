
@{
    ViewBag.Title = "AddOffer";
}


 


<h2>Create Offers</h2>


<style>
    .form-material .float-label {
        top: -12px;
    }
</style>





<div class="card-block">

    <form class="form-material" enctype="multipart/form-data">

        <div class="form-group form-default">
            <input type="text" name="footer-email" class="form-control" id="brName">
            <span class="form-bar"></span>
            <label class="float-label">Brand Name</label>
        </div>


        <div class="form-group form-default">
            <label class="floatimage">Image</label>
            <input type="file" name="footer-email" class="form-control" id="AddsUpload">
            <span class="form-bar"></span>

        </div>

        <div class="form-group form-default">
            <input type="text" name="offdesceng" class="form-control" id="offdesceng">
            <span class="form-bar"></span>
            <label class="float-label">Description English:</label>
        </div>
        <div class="form-group form-default">
            <input type="text" name="offdescarb" class="form-control" id="offdescarb">
            <span class="form-bar"></span>
            <label class="float-label">Description Arabic :</label>
        </div>
 

        <div class="form-group form-default">
            <input type="text" name="offdis" class="form-control" id="offdis">
            <span class="form-bar"></span>
            <label class="float-label">Percentage (Discount on unit Price) :</label>
        </div>


        <div class="form-group form-default">
            <input type="date" name="off_startdate" class="form-control" id="off_startdate">
            <span class="form-bar"></span>
            <label class="float-label">Start Date</label>
        </div>


        <div class="form-group form-default">
            <input type="date" name="off_edddate" class="form-control" id="off_edddate">
            <span class="form-bar"></span>
            <label class="float-label">End Date</label>
        </div>


        <div class="form-group form-default">
            <input type="date" name="vouchercode" class="form-control" id="vouchercode">
            <span class="form-bar"></span>
            <label class="float-label"> Coupon Code(voucher code)</label>
        </div>




        <div class="form-group form-default">
            <select name="select" class="form-control" id="offstatus">
                <option value="opt1"></option>
                <option value="opt1">Approve</option>
                <option value="opt2">Reject</option>
            </select>
            <span class="form-bar"></span>
            <label class="float-label">Status</label>
        </div>



    </form>
</div>


