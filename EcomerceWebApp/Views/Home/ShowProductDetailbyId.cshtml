<script src="~/scripts/jquery-1.10.2.min.js"></script>

<script>
    $(document).ready(function () {
        getProductDetails();
    });

    var url_string = window.location.href; //window.location.href
    var url = new URL(url_string);
    var prodid = url.searchParams.get("prodid");

    function getProductDetails() {
        $.ajax({
            async: true,
            type: "Get",
            dataType: "JSON",
            contentType: 'application/json;',
            url: 'http://localhost:50235/Home/GetProductDetailById/' + prodid,
            data: '{}',

            processing: true,
            serverSide: true,
            success: function (data) {

                //var url="../"+"/Home/GetProductDetailById/";
                var record = JSON.parse(data.data);
                //record[0].img_url
                $('#prodDetImg').after('<div class="card"> <article class="gallery-wrap"> <div class="img-big-wrap"> <div> <a href="#"><img src="http://serv.vrad.in/img/ecom_olaala/' + record[0].img_url + '"></a></div> </div></article></div>');
                $('#prod_discrep').append(record[0].name_desc_en);
                $('#prod_name').append(record[0].name_en);
                $('#prod_price').append(record[0].unit_price);

            }
        }
   )
    };
</script>